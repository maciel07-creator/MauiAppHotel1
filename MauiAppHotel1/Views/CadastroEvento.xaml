<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel1.Views.CadastroEvento"
             Title="CadastroEvento">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Nome do evento" Text="{Binding Nome}" />

            <DatePicker Date="{Binding DataInicio}" />
            <Label Text="Data de início" />

            <DatePicker Date="{Binding DataTermino}" />
            <Label Text="Data de término" />

            <Entry Placeholder="Número de participantes"
                   Keyboard="Numeric"
                   Text="{Binding NumeroParticipantes}" />

            <Entry Placeholder="Local do evento"
                   Text="{Binding Local}" />

            <Entry Placeholder="Custo por participante"
                   Keyboard="Numeric"
                   Text="{Binding CustoPorParticipante}" />

            <Button Text="Cadastrar" Clicked="Button_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>